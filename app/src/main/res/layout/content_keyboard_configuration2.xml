<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jimenez.osmidterm.ConfigurationActivity2"
    tools:showIn="@layout/activity_configuration2"
    android:background="@drawable/bgtiles"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/btnA"
        android:textSize="50sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorFont"
        android:layout_marginStart="44dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/btnB"
        android:textSize="50sp"
        android:textColor="@color/colorFont"
        android:layout_alignTop="@+id/btnA"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btnC"
        android:textSize="50sp"
        android:layout_marginRight="30dp"
        android:textColor="@color/colorFont"
        android:layout_above="@+id/btnD"
        android:layout_alignStart="@+id/btnOk" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/btnD"
        android:textSize="50sp"
        android:layout_marginTop="65dp"
        android:textColor="@color/colorFont"
        android:layout_below="@+id/btnA"
        android:layout_alignStart="@+id/btnA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:id="@+id/btnE"
        android:textSize="50sp"
        android:textColor="@color/colorFont"
        android:layout_alignTop="@+id/btnD"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/btnF"
        android:textSize="50sp"
        android:textColor="@color/colorFont"
        android:layout_alignTop="@+id/btnE"
        android:layout_alignStart="@+id/btnC" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_marginLeft="15dp"
        android:background="@drawable/back"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/btnD"
        android:layout_alignEnd="@+id/btnD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/btnOk"
        android:textSize="50sp"
        android:textColor="@color/colorFont"
        android:layout_marginLeft="80dp"
        android:layout_alignBottom="@+id/btnBack"
        android:layout_toEndOf="@+id/btnE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:id="@+id/btnG"
        android:textSize="50sp"
        android:textColor="@color/colorFont"
        android:layout_alignTop="@+id/btnOk"
        android:layout_toStartOf="@+id/btnOk" />


</RelativeLayout>
