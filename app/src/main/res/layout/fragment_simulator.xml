<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/colorPrimary">

<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView2">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit rate"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/colorFont"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/txtPageFaults" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtHitRate"
        android:textSize="90sp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentBottom="@+id/textView5"
        android:layout_marginTop="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reference : "
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="@color/colorFont"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txtHitRate"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="New Text"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:id="@+id/txtReferencelist"
        android:textSize="20sp"
        android:textColor="@color/colorFont"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtPageFaults"
        android:textSize="90sp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginEnd="23dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PG Faults"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:textColor="@color/colorFont"
        android:layout_marginLeft="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtTime"
        android:textSize="90sp"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:textColor="@color/colorFont"
        android:layout_marginLeft="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/txtTime"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    </ScrollView>



</RelativeLayout>